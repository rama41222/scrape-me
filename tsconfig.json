{
  "compilerOptions": {
    "incremental": true,                         
    "target": "es2019",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                 
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "build",                              
    "rootDir": "src",                               
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                                 
    "noImplicitAny": true,                          
    "strictNullChecks": true,                    
    "esModuleInterop": true,                        
    "sourceMap": true,
    "resolveJsonModule": true,                      
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
